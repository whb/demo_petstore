<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cn.ceopen.sample.petstore.model">
	<class name="Product" table="PRODUCT">
		<id name="productId" column="PRODUCTID" unsaved-value="undefined">
			<generator class="assigned" />
		</id>

		<many-to-one name="category"
			class="cn.ceopen.sample.petstore.model.Category" column="CATEGORY"
			not-null="true" />

		<property name="name" column="NAME" />

		<property name="descriptionWithImage" column="DESCN" />
	</class>
</hibernate-mapping>